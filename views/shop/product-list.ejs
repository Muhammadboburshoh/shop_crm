<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/style/header.css">
  </head>

  <body>
    <div class="main-wrapper">
      <%- include('../includes/navbar.ejs') %>
  
      <div class="content-wrapper">
        <%- include('../includes/header-right.ejs') %>

        <section class="main-content-wrapper">

          <%- include('../includes/search.ejs') %>
          
          <% if (products.length > 0) { %>
              <table class="categories__table">
                <thead>
                  <tr class="categories__thead-tr">
                    <th class="categories__thead-th">Name</th>
                    <th class="categories__thead-th">Barcode</th>
                    <th class="categories__thead-th">Price</th>
                    <th class="categories__thead-th">Count</th>
                    <th class="categories__thead-th">Savatchaga qo'shish</th>
                  </tr>
                </thead>
                <tbody class="classes">
                  <% for (let product of products) { %>
                    <tr class="categories__tbody-tr<% if(product.count < 10){%> product-min-count<%}%>">
                      <th class="categories__tbody-td">
                        <%= product.name %>
                      </th>
                      <th class="categories__tbody-td">
                        <%= product.barcode %>
                      </th>
                      <th class="categories__tbody-td">
                        <%= product.markup_price %> so'm
                      </th>
                      <th class="categories__tbody-td">
                        <%= product.count %>
                      </th>
                      <th class="categories__tbody-td">
                        <input name="name" class="category__create-input" type="number" placeholder="soni" min="1" value="1" required />
                        <button type="submit" data-id="<%= product.id %>" class="category__create-btn" data-update="0">
                          <b style="font-size: 20px; padding: -5px;">+</b>
                        </button>
                      </th>
                    </tr>
                    <% } %>
                </tbody>
              </table>

              <%- include('../includes/pagination.ejs', {currentPage: currentPage, nextPage: nextPage, hasNextPage: hasNextPage, perviousPage: perviousPage, hasPerviousPage: hasPerviousPage, lastPage: lastPage}) %>

          <% } else { %>
            <h1>No Products Found!</h1>
          <% } %>

        </section>
      </div>
    </div>

  <%- include('../includes/end.ejs') %>
