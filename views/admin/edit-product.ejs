<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/style/header.css">
  </head>

  <body>
    <div class="main-wrapper">
      <%- include('../includes/navbar.ejs') %>
  
      <div class="content-wrapper">
        <%- include('../includes/header-right.ejs') %>

        <% if (prodCreateing) {%>
          <div class="massage-box">
            <p class="creating-product">
              Product yaratildi!
            </p>
          </div>
        <% } %>

        <section class="main-content-wrapper">
          <form class="category__create-form" action="/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST" enctype="application/x-www-form-urlencoded">
            <h3 class="parrent-hading">Yangi product qo'shing!</h3>
            <div class="input-wrapper">
              <label for="create-category">Product nomi: </label>
              <input name="name" class="category__create-input" type="text" placeholder="name" required  value="<% if (editing) { %><%= product.name %><% } %>"/>
            </div>
            <div class="input-wrapper">
              <label for="create-category">Shrix code raqamlarini kiriting: </label>
              <input name="barcode" class="category__create-input" type="number" placeholder="barcode" required value="<% if (editing) { %><%= product.barcode %><% } %>" />
            </div>
            <div class="input-wrapper">
              <label for="create-category">Product soni: </label>
              <input name="count" class="category__create-input" type="number" placeholder="count" required value="<% if (editing) { %><%= product.count %><% } %>"/>
            </div>
            <div class="input-wrapper">
              <label for="create-category">Sotib olingan narx: </label>
              <input name="original_price" class="category__create-input" type="number" placeholder="orginal price" required value="<% if (editing) { %><%= product.original_price %><% } %>" />
            </div>
            <div class="input-wrapper">
              <label for="create-category">Sotuvdagi narxi: </label>
              <input name="markup_price" class="category__create-input" type="number" placeholder="markup price" required value="<% if (editing) { %><%= product.markup_price %><% } %>"/>
            </div>
            <div class="input-wrapper">
              <label for="create-category">Mahsulot haqida: </label>
              <textarea name="description" class="category__create-input textarea-style" placeholder="description"><% if (editing) { %><%= product.description %><% } %></textarea>
            </div>
            <button class="category__create-btn parent-btn" type="submit"><% if (editing) { %>Edit Product<% } else { %>Qo'shish<% } %></button>
          </form>
        </section>
      </div>
    </div>

    <script src="/js/admin.js"></script>
  <%- include('../includes/end.ejs') %>
